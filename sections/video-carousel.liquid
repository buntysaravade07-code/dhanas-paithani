{%- if section.settings.custom_font_url != blank -%}
@font-face {
  font-family: 'CustomHeadingFont';
  src: url('{{ section.settings.custom_font_url }}');
  font-display: swap;
}
{%- endif -%}

{%- if section.settings.override_theme_font != blank -%}
  #DP--{{ section_id }} {
    --main-font: {{ section.settings.main_font.family }}, {{ section.settings.main_font.fallback_families }};
    --main-font-weight: {{ section.settings.main_font.weight }};
    --main-font-style: {{ section.settings.main_font.style }};
    --heading-font: {{ section.settings.heading_font.family }}, {{ section.settings.heading_font.fallback_families }};
    --heading-font-weight: {{ section.settings.heading_font.weight }};
    --heading-font-style: {{ section.settings.heading_font.style }};
  }
{%- endif -%}

#DP--{{ section_id }} {
  --cell-align: "center";
  {% if section.blocks.size > 4 %}
  --wrap-around: true;
  --draggable: ">1";
  {% else %}
    --wrap-around: false;
    --draggable: false;
  {% endif %}
  --arrow-color: {{ section.settings.text_color }};
  background: {{ section.settings.background_color }};
  padding-top: {{ section.settings.top_padding }}px;
  padding-bottom: {{ section.settings.bottom_padding }}px;
  overflow: visible;
}

#DP--{{ section_id }} .onhow__sizer {
  width: 100%;
}

#DP--{{ section_id }} .onhow__section-title {
  text-align: center;
  margin-bottom: {% if section.settings.description != blank %}{{ section.settings.heading_description_spacing }}px{% else %}40px{% endif %};
  color: {{ section.settings.text_color }};
  font-size: calc(var(--dp-g-heading-size, var(--dp-heading-size, 28px)) * {{ section.settings.heading_size | times: 0.01 }});
  letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  {%- if section.settings.custom_font_url != blank -%}
  font-family: 'CustomHeadingFont', var(--font-heading-family);
  {%- endif -%}
}

#DP--{{ section_id }} .onhow__section-description {
  text-align: center;
  margin-bottom: 40px;
  color: {{ section.settings.text_color }};
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 16px)) * {{ section.settings.description_size | times: 0.01 }});
  line-height: var(--dp-g-body-line-height, var(--dp-body-line-height, calc(3px + 2.5ex + 3px)));
}

#DP--{{ section_id }} .onhow__section-description p {
  margin: 0 0 1em 0;
  color: inherit;
  font-size: inherit;
  line-height: inherit;
}

#DP--{{ section_id }} .onhow__section-description p:last-child {
  margin-bottom: 0;
}

#DP--{{ section_id }} .onhow__section-description strong {
  font-weight: bold;
  color: inherit;
}

#DP--{{ section_id }} .onhow__section-description em {
  font-style: italic;
  color: inherit;
}

#DP--{{ section_id }} .onhow__section-description a {
  color: inherit;
  text-decoration: underline;
}

#DP--{{ section_id }} .onhow__section-description ul,
#DP--{{ section_id }} .onhow__section-description ol {
  margin: 0 0 1em 0;
  padding-left: 1.5em;
  color: inherit;
  font-size: inherit;
  line-height: inherit;
}

#DP--{{ section_id }} .onhow__section-description li {
  margin-bottom: 0.5em;
  color: inherit;
}

#DP--{{ section_id }} .onhow__flex--main {
  position: relative;
  align-items: center;
  grid-template-columns: repeat(auto-fill, minmax(50%, 1fr));
  grid-auto-rows: 50%;
  grid-auto-columns: minmax(0, auto);
}

#DP--{{ section_id }} .onhow__content {
  flex: 1 0 40%;
  padding: 20px;
}

#DP--{{ section_id }} .onhow__inner-content {
  width: min(400px, 80%);
  margin: auto;
}

#DP--{{ section_id }} .onhow__small-heading {
  margin: 0;
  text-align: center;
  color: {{ section.settings.text_color }};
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--heading-font);
  font-weight: var(--heading-font-weight);
  font-style: var(--heading-font-style);
  {%- endif -%}
  font-size: calc(var(--dp-g-heading-size, var(--dp-heading-size, 18px)) * 0.9);
  line-height: var(--dp-g-small-heading-line-height, var(--dp-small-heading-line-height, calc(3px + 2ex + 3px)));
}

#DP--{{ section_id }} .onhow__block .onhow__small-heading {
  font-size: calc(var(--dp-g-small-heading-size, var(--dp-small-heading-size, 24px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
    font-family: var(--heading-font);
    font-weight: var(--heading-font-weight);
    font-style: var(--heading-font-style);
  {%- endif -%}
}

#DP--{{ section_id }} .onhow__rte p,
#DP--{{ section_id }} .onhow__rte ul {
  line-height: var(--dp-g-body-line-height, var(--dp-body-line-height, calc(3px + 2.5ex + 3px)));
  color: {{ section.settings.text_color }};
  font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 18px)) * {{ section.settings.text_size | times: 0.01 }});
  {%- if section.settings.override_theme_font != blank -%}
  font-family: var(--main-font);
  font-weight: var(--main-font-weight);
  font-style: var(--main-font-style);
  {%- endif -%}
}

#DP--{{ section_id }} .onhow__block {
  color: {{ section.settings.text_color }};
}

#DP--{{ section_id }} .onhow__block + .onhow__block {
  margin-top: 15px;
}

#DP--{{ section_id }} .onhow__videos {
  flex: 1 0 60%;
  overflow: visible;
  padding-bottom: 20px;
}

#DP--{{ section_id }} .onhow__video-slider {
  margin: auto;
  overflow: visible !important;
  padding-bottom: 60px; 
}

#DP--{{ section_id }} .onhow__videos-wrapper,
#DP--{{ section_id }} .onhow__videos,
#DP--{{ section_id }} .onhow__flex--main,
#DP--{{ section_id }} .onhow__sizer,
#DP--{{ section_id }} .flickity-slider {
  overflow: visible !important;
}

#DP--{{ section_id }} .onhow__item {
  --final-slide-width: min(350px, 90vw);
  --slide-height: calc(var(--final-slide-width) * 1.32);
  --selected-slide-height: calc(var(--final-slide-width) * 1.32);
  height: auto;
  width: var(--final-slide-width);
  margin: 0 {{ section.settings.gap | divided_by: 2.0 }}px;
  margin-bottom: 25px;
  display: inline-block;
  overflow: visible;
  transition: all 0.2s ease;
  position: relative;
  z-index: 1;
}

#DP--{{ section_id }} .is-selected {
  transform: translateY(-4px);
  z-index: 50;
}

#DP--{{ section_id }} .onhow__item > a {
  text-decoration: none;
}

#DP--{{ section_id }} .onhow__stretch-height .onhow__item {
  height: 100%;
}

#DP--{{ section_id }} .is-selected .onhow__video-wrapper {
  padding-top: 0;
}

#DP--{{ section_id }} .onhow__video-inner {
    width: 100%;
}

#DP--{{ section_id }} .is-selected .onhow__hosted-video {
  width: 100%;
  min-height: var(--selected-slide-height);
  display: block;
  object-fit: cover;
}

#DP--{{ section_id }} .onhow__video {
  height: 100%;
  display: flex;
  text-align: center;
  align-items: flex-start;
  position: relative;
  overflow: visible;
}

#DP--{{ section_id }} .onhow__video-wrapper {
  width: 100%;
  padding-top: 0;
  transition: all 0.5s ease;
  position: relative;
  height: var(--slide-height);
}

#DP--{{ section_id }} .onhow__hosted-video {
  width: 100%;
  min-height: var(--slide-height);
  display: block;
  object-fit: cover;
  border-radius: 15px;
  transition: all 0.5s ease;
}

#DP--{{ section_id }} .onhow__video-content {
  width: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  border-radius: 15px;
  height: 100%;
  padding: 15px 10px;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  transition: all 0.2s linear;
  z-index: 2;
  background: linear-gradient(transparent 0%, rgba(0,0,0,0.3) 70%, rgba(0,0,0,0.6) 100%);
}

#DP--{{ section_id }} .onhow__absolute-link {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
}

#DP--{{ section_id }} .onhow__item:hover {
  transform: translateY(-2px);
  z-index: 100;
}

#DP--{{ section_id }} .onhow__video-content:hover {
  box-shadow: none;
}

#DP--{{ section_id }} .onhow__sound-button {
  cursor: pointer;
  background-color: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  position: absolute;
  bottom: 0;
  right: 0;
  width: 35px;
  height: 35px;
  margin: 10px;
  padding: 5px;
  background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' xmlns='http://www.w3.org/2000/svg' fill-rule='evenodd' clip-rule='evenodd'%3E%3Cpath d='M18 23l-9.305-5.998.835-.651 7.47 4.815v-10.65l1-.781v13.265zm0-15.794l5.384-4.206.616.788-23.384 18.264-.616-.788 5.46-4.264h-2.46v-10h5.691l9.309-6v6.206zm-11.26 8.794l1.26-.984v-7.016h-4v8h2.74zm10.26-8.013v-5.153l-8 5.157v6.244l8-6.248z'/%3E%3C/svg%3E");
  background-size: 65%;
  background-position: center center;
  background-repeat: no-repeat;
}

#DP--{{ section_id }} .onhow__sound-button--on {
  background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' xmlns='http://www.w3.org/2000/svg' fill-rule='evenodd' clip-rule='evenodd'%3E%3Cpath d='M15 23l-9.309-6h-5.691v-10h5.691l9.309-6v22zm-9-15.009v8.018l8 5.157v-18.332l-8 5.157zm14.228-4.219c2.327 1.989 3.772 4.942 3.772 8.229 0 3.288-1.445 6.241-3.77 8.229l-.708-.708c2.136-1.791 3.478-4.501 3.478-7.522s-1.342-5.731-3.478-7.522l.706-.706zm-2.929 2.929c1.521 1.257 2.476 3.167 2.476 5.299 0 2.132-.955 4.042-2.476 5.299l-.706-.706c1.331-1.063 2.182-2.729 2.182-4.591 0-1.863-.851-3.529-2.184-4.593l.708-.708zm-12.299 1.299h-4v8h4v-8z'/%3E%3C/svg%3E");
}

#DP--{{ section_id }} .onhow__text-area {
  flex: 1;
  text-align: center;
  display: flex;
  flex-direction: column;
  width: 100%;
  align-items: center;
  justify-content: flex-end;
  color: white;
}

#DP--{{ section_id }} .onhow__text-area .onhow__text {
  color: white;
}

#DP--{{ section_id }} .onhow__text-area .onhow__text p {
  color: white;
  margin: 0 0 8px 0;
  font-weight: 600;
}

#DP--{{ section_id }} .onhow__view-product {
  display: inline-block;
  padding: 8px 16px;
  background: {{ section.settings.button_bg_color }};
  color: {{ section.settings.button_text_color }};
  border-radius: 4px;
  margin-top: 5px;
  text-decoration: none;
  font-weight: 600;
  font-size: 14px;
}

#DP--{{ section_id }} .onhow__videos-nav {
  width: fit-content;
  margin: 0 auto;
  display: flex;
  gap: 20px;
  margin-top: {{ section.settings.navigation_spacing }}px;
  position: relative;
  z-index: 5;
}

#DP--{{ section_id }} .onhow__nav-button {
  cursor: pointer;
  width: 38px;
  height: 38px;
  transform: scale(1.6);
  transition: all 0.3s ease;
}

#DP--{{ section_id }} .onhow__rte p,
#DP--{{ section_id }} .onhow__rte ul {
  color: {{ section.settings.text_color }};
}

#DP--{{ section_id }} .onhow__small-heading {
  color: {{ section.settings.text_color }};
}

#DP--{{ section_id }} .onhow__videos-wrapper:after {
  content: 'flickity';
  display: none;
}

#DP--{{ section_id }} .onhow__videos-wrapper:not(.flickity-enabled) {
  display: flex;
  gap: 10px;
  overflow: visible;
}

#DP--{{ section_id }} .onhow__videos-wrapper {
  overflow: visible;
}

#DP--{{ section_id }} .onhow__videos-wrapper:not(.flickity-enabled) .onhow__item:nth-child(n+{{ section.settings.per_row | plus: 1 }}){
  display: none;
}

#DP--{{ section_id }} .flickity-slider {
  top: 0;
}

@media (max-width: 768px) {
  #DP--{{ section_id }} {
    padding-top: {{ section.settings.top_padding | divided_by: 2 }}px;
    padding-bottom: {{ section.settings.bottom_padding | divided_by: 2 }}px;
    --draggable: ">1";
    --wrap-around: true;
  }

  #DP--{{ section_id }} .onhow__sizer {
    margin: 0 auto;
  }

  #DP--{{ section_id }} .onhow__video-slider {
    padding-bottom: 45px;
  }

  #DP--{{ section_id }} .onhow__item {
    --final-slide-width: min(280px, 85vw);
    --slide-height: calc(var(--final-slide-width) * 1.2);
    --selected-slide-height: calc(var(--final-slide-width) * 1.2);
    max-height: 50vh;
    margin-bottom: 20px;
  }

  #DP--{{ section_id }} .onhow__hosted-video {
    max-height: 45vh;
    object-fit: cover;
  }

  #DP--{{ section_id }} .onhow__section-title {
    font-size: calc(var(--dp-g-heading-size, var(--dp-heading-size, 24px)) * {{ section.settings.heading_size | times: 0.01 }});
    margin-bottom: {% if section.settings.description != blank %}{{ section.settings.heading_description_spacing | divided_by: 2 }}px{% else %}25px{% endif %};
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }

  #DP--{{ section_id }} .onhow__section-description {
    font-size: calc(var(--dp-g-body-size, var(--dp-body-size, 14px)) * {{ section.settings.description_size | times: 0.01 }});
    margin-bottom: 25px;
  }

  #DP--{{ section_id }} .onhow__nav-button {
    transform: scale(1.2);
  }

  #DP--{{ section_id }} .onhow__videos-nav {
    margin-top: {{ section.settings.navigation_spacing | divided_by: 1.5 }}px;
  }
}
</style>

