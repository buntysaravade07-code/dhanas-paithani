<section id="DP--{{ section_id }}" class="DP--{{ section_id }} onhow__videos-slider onhow__section">
  {%- if section.settings.anchor_id != blank -%}
    <div id="{{ section.settings.anchor_id | remove: '#' | handleize }}" class="onhow__anchor-id" style="height: 0; overflow: hidden;"></div>
  {%- endif -%}
  <div class="onhow__sizer">
    {% if section.settings.heading != blank %}
      <h2 class="onhow__section-title">{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.description != blank %}
      <div class="onhow__section-description">{{ section.settings.description }}</div>
    {% endif %}

    <div class="onhow__flex onhow__flex--main">
      <div class="onhow__videos">
        <div id="slider-{{ section_id }}" class="onhow__videos-wrapper onhow__video-slider">
          {%- for block in videos -%}
            <div class="onhow__item onhow__item onhow__video-{{ forloop.index }} onhow__block-{{ block.id }}" {{ block.shopify_attributes }}>
              <div class="onhow__video">
                <div class="onhow__video-inner">
                  {%- if block.settings.html5_video != blank -%}
                    <div class="onhow__video-wrapper">
                      {%- assign video = block.settings.html5_video -%}
                      <video class="onhow__hosted-video" width="{{ video.aspect_ratio | times: 100 }}" height="100" playsinline loop muted loading="lazy" poster="{{ video.preview_image | image_url: width: 2800 }}">
                        {%- for source in video.sources -%}
                          {%- if source.format == 'mp4' or source.format == 'mov' -%}<source src="{{ source.url }}">{%- endif -%}
                        {%- endfor -%}
                      </video>
                      <div class="onhow__sound-button"></div>
                    </div>
                  {%- else -%}
         
                  <div class="onhow__video-wrapper">
                    <video
                      class="onhow__hosted-video"
                      width="2000" height="100"
                      playsinline loop muted loading="lazy">
                        <source src="https://cdn.shopify.com/videos/c/o/v/{{ background_placeholder_video_id }}.mp4" data-onhow-default-src>
                    </video>
                    <div class="onhow__sound-button"></div>
                  </div>
                  {%- endif -%}
                  {%- unless block.settings.product == blank -%}
                    <div class="onhow__video-content">
                      <a href="{{ block.settings.product.url }}" class="onhow__absolute-link"></a>
                      <div class="onhow__text-area">
                        <div class="onhow__text onhow__rte">
                          <p>{{ block.settings.product.title }}</p>
                        </div>
                        <a href="{{ block.settings.product.url }}" class="onhow__view-product">View Product</a>
                      </div>
                    </div>
                  {%- endunless -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
        {%- if section.settings.show_arrows != blank -%}
          <div class="onhow__videos-nav">
            <div class="onhow__nav-button onhow__nav-button--prev">
              <svg width="25" height="25" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path d="M12 0c6.623 0 12 5.377 12 12s-5.377 12-12 12-12-5.377-12-12 5.377-12 12-12zm0 1c6.071 0 11 4.929 11 11s-4.929 11-11 11-11-4.929-11-11 4.929-11 11-11zm3 5.753l-6.44 5.247 6.44 5.263-.678.737-7.322-6 7.335-6 .665.753z" fill="none" stroke="#121212"/></svg>
            </div>
            <div class="onhow__nav-button onhow__nav-button--next">
              <svg width="25" height="25" xmlns="http://www.w3.org/2000/svg" fill-rule="evenodd" clip-rule="evenodd"><path d="M12 0c6.623 0 12 5.377 12 12s-5.377 12-12 12-12-5.377-12-12 5.377-12 12-12zm0 1c6.071 0 11 4.929 11 11s-4.929 11-11 11-11-4.929-11-11 4.929-11 11-11zm-3 5.753l6.44 5.247-6.44 5.263.678.737 7.322-6-7.335-6-.665.753z" fill="none" stroke="#121212"/></svg>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>
{%- endcapture -%}
